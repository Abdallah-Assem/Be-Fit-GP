@page
@model BeFit_Website.Pages.UserInfo.EditUserModel
@{
<form method="post" class="align-content-center col-6 w-25" style="margin:auto;text-align:center;color:#1A2238;" enctype="multipart/form-data">
    <div class="form-floating form-outline mb-4">
        <input asp-for="user.UserName"  class="form-control" required>
        <label class="form-label">Username</label>
    </div>
    <div class="form-floating form-outline mb-4">
        <input asp-for="user.Email" class="form-control" required>
        <label class="form-label">Email</label>
    </div>
        <div class="form-floating form-outline mb-4">
            <input asp-for="user.Password" class="form-control"  required>
            <label class="form-label">Password</label>
        </div>
    <button type="submit" class="btn btn-success btn-block mb-3"><i class="bi bi-patch-plus"> Edit</i></button>
    <div class="text-center">
            <p style="color:#000000">Wanna Edit Macros? <a class="" asp-page="/UserInfo/EditUserMacros">Edit Macros</a></p>
    </div>
</form>
}

