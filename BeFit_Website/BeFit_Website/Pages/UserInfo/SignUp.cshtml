@page
@model BeFit_Website.Pages.UserInfo.SignUpModel
@{
<form method="post" class="align-content-center col-6 w-25" style="margin:auto;text-align:center;color:#1A2238;" enctype="multipart/form-data">
    <div class="form-floating form-outline mb-4">
        <input asp-for="user.UserName" class="form-control" required>
        <label class="form-label">Username</label>
        <span asp-validation-for="user.UserName" class="text-danger"></span>
    </div>
        <div class="form-floating form-outline mb-4">
            <input asp-for="user.Email" class="form-control" required>
            <label class="form-label">Email</label>
            <span asp-validation-for="user.Email" class="text-danger"></span>
        </div>
    <div class="form-floating form-outline mb-4">
        <input asp-for="user.Password" class="form-control" type="password" required>
        <label class="form-label">Password</label>
        <span asp-validation-for="user.Password" class="text-danger"></span>
    </div>
        <div class="form-floating form-outline mb-4">
            <input asp-for="user.ProfilePhoto" class="form-control" type="file" >
            <label class="form-label">Profile Picture</label>
            <span asp-validation-for="user.ProfilePhoto" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-success btn-block mb-3"><i class="bi bi-patch-plus"> Sign up</i></button>
    <div class="text-center">
        <p style="color:#000000">Already have an account? <a class="" asp-page="/UserInfo/Login">Login</a></p>
    </div>
</form>
}
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
`@if (@Model.Msg != null)
{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    if (@Model.Status == "error")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@Model.Msg',
                showConfirmButton: true
            })
        </script>
    }
}